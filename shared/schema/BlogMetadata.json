{
  "$id": "https://example.com/address.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "BlogMetadata",
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "description": "Internal schema version"
    },
    "source": {
      "type": "string",
      "description": "'medium' or 'other'"
    },
    "authorIds": {
      "type": "array",
      "description": "The Dev Library ID of the author(s)",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9\\-_]+$"
      }
    },
    "author": {
      "type": "string",
      "description": "The name of the human author"
    },
    "title": {
      "type": "string",
      "description": "The title of the blog post"
    },
    "link": {
      "type": "string",
      "description": "Full external link to the post"
    },
    "tags": {
      "type": "array",
      "minItems": 1,
      "description": "Array of product-specific string tags",
      "items": {
        "type": "string",
        "pattern": "^[a-z-]+$"
      }
    },
    "expertise": {
      "type": "string",
      "description": "The expertise of the articles or projects"
    }
  },
  "required": [ "author", "title", "link", "tags", "expertise", "authorIds"]
}
